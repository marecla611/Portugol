programa
{
	funcao inicio()
	{
		cadeia vendedor_nome
		real salario_fixo, total_vendas_efetuadas, comissao, salario_recebido

		escreva(" Digite o nome do vendedor: ")
		leia(vendedor_nome)

		escreva(" Digite o salário deste vendedor: ")
		leia(salario_fixo)

		comissao = 0.15
		comissao = comissao * salario_fixo
		salario_recebido = comissao + salario_fixo

		escreva(" O funcionário ", vendedor_nome, " tem salário fixo de: ", salario_fixo)
		escreva(" Seu salário final deste mês é de: ", salario_recebido)
		
		
		
		
		
	}
}
