programa
{
	inclua biblioteca Matematica --> mat
	
	funcao inicio()
	{
		
real numero1
		real numero2
		real menor

		escreva("Informe o primeiro número: ")
		leia(numero1)

		escreva("Informe o segundo número: ")
		leia(numero2)

		menor = mat.menor_numero(numero1, numero2)

		escreva("\nO menor número é: ", menor, "\n")
	}
}
