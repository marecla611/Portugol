programa
{
	funcao inicio()
	{
		inteiro opcao
		
		escreva("1) Elogio \n")
		escreva("2) Ofensa \n")
		escreva("3) Sair \n\n")

		escreva("Escolha uma opção: ")
		leia(opcao)

		limpa()

		escolha (opcao)
		
{
		caso 1:
		escreva("Você é lindo(a)!")
		pare
		caso 2:
		escreva("Você é horrível!")
		pare
		caso 3:
		escreva("Tchau!")
		pare
		caso contrario:
		escreva("Opção inválida")
		}
		escreva("\n")
	}
}
